    "ports": [3306, 22]
  },
  "monitoring_server": {
    "name": "monitor-server-{id}",
    "cpu": 2,
    "memory": 2048,
    "disk": 30,
    "os": "ubuntu-20.04",
    "services": ["prometheus", "grafana", "ufw"],
    "ports": [9090, 3000, 22]
  }
}